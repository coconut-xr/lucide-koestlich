{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "lib": ["DOM", "ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "NodeNext",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["src/**/*.tsx"]
}
